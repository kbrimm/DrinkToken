<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_drink_logger">

    <Space android:layout_height="25dp"
        android:layout_width="match_parent"/>

    // Add drink button
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/beer_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cheers_emoji"
        android:layout_gravity="center"
        android:onClick="addDrink"
        style="?android:attr/buttonStyle"/>

    <Space android:layout_height="25dp"
        android:layout_width="match_parent"/>

    <TextView android:id="@+id/daily_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tint="@color/colorAccent"
        android:text="@string/daily_count"
        android:textAllCaps="true"
        android:textSize="18pt"
        android:gravity="center" />
    <TextView android:id="@+id/weekly_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weekly_count"
        android:textAllCaps="true"
        android:textSize="18pt"
        android:gravity="center" />

    <Space android:layout_height="20dp"
        android:layout_width="match_parent"/>

    <TextView android:id="@+id/daily_avg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daily_avg"
        android:textAllCaps="true"
        android:textSize="12pt"
        android:gravity="center" />
    <TextView android:id="@+id/weekly_avg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weekly_avg"
        android:textAllCaps="true"
        android:textSize="12pt"
        android:gravity="center" />

</LinearLayout>
